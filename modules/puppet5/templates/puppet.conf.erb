<%- if @basemodulepath || ! @environment.empty? || ! @runinterval.empty? || ! @server.empty? -%>
[main]
  <%- if @basemodulepath -%>
  basemodulepath = <%= @basemodulepath.gsub(/\s+/, "") %>
  <%- end -%>
  <%- unless @environment.empty? -%>
  environment = <%= @environment %>
  <%- end -%>
  <%- unless @runinterval.empty? -%>
  runinterval = <%= @runinterval %>
  <%- end -%>
  <%- unless @server.empty? -%>
  server = <%= @server %>
  <%- end -%>
<%- end -%>
